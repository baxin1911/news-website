<% const form = {
    id: 'accountForm',
    usernameInput: { 
        id: 'textUsernameAccountInput', 
        label: {
            content: 'Nombre de usuario',
        },
        type: 'text', 
        name: 'username',
        value: profile.username || ''
    },
    avatarPictureInput: { 
        id: 'fileAvatarPictureAccountInput', 
        label: {
            content: 'Foto de perfil',
        },
        name: 'avatarPath',
        value: profile.avatarPath || ''
    },
    coverPictureInput: {
        id: 'fileCoverPictureAccountInput', 
        label: {
            content: 'Foto de portada',
        },
        name: 'coverPath',
        value: profile.coverPath || ''
    },
    nameInput: {
        id: 'nameAccountInput',
        label: {
            content: 'Nombre',
        },
        type: 'text',
        name: 'name',
        value: profile.name || ''
    },
    lastNameInput: {
        id: 'lastNameAccountInput',
        label: {
            content: 'Apellido',
        },
        type: 'text',
        name: 'lastName',
        value: profile.lastName || ''
    },
    submitButton: {
        id: 'accountSubmitButton', 
        content: 'Guardar cambios'
    }
}; %>

<section>
    <h2>Cuenta</h2>

    <form id="<%= form.id %>" class="row g-3">
        <div class="row mb-3">
            <%- include('../../ui/secondaryTitle', { title: 'información pública' }) %>

            <%- include('../../ui/formField', { 
                col: 'col-md-4',
                description: 'Administra el nombre de usuario y perfil que se mostrará públicamente.',
                input: form.usernameInput 
            }) %>

            <%- include('../../ui/formField', { 
                col: 'col-md-4',
                description: 'Selecciona una imágen de perfil',
                input: form.avatarPictureInput 
            }) %>

            <%- include('../../ui/formField', { 
                col: 'col-md-4',
                description: 'Selecciona una imágen de portada',
                input: form.coverPictureInput 
            }) %>
        </div>

        <div class="row mb-3">
            <%- include('../../ui/secondaryTitle', { title: 'información personal' }) %>

            <p>Administra tu información personal. Consulta nuestros <a href="#">Términos de Servicio</a> y <a href="#">Política de Privacidad</a>.</p>

            <div class="row">
                <%- include('../../ui/formField', {
                    col: 'col-md-6',
                    description: null,
                    input: form.nameInput 
                }) %>

                <%- include('../../ui/formField', {
                    col: 'col-md-6',
                    description: null,
                    input: form.lastNameInput 
                }) %>
            </div>
        </div>

        <div class="d-flex justify-content-center bg-sticky rounded-3">
            <%- include('../../../../shared/submit', { button: form.submitButton }) %>
        </div>
    </form>
</section>