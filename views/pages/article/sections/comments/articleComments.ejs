<ul class="list-group list-group-light">
    <% comments.forEach( comment => { %>
        <li id="comment-<%= comment.id %>"
            class="comment-card list-group-item px-3 rounded-3 list-group-item-primary mb-2" 
        >
            <div class="d-inline-flex align-items-center gap-2">
                <a href="/profile/<%= comment.username %>" class="text-decoration-none">
                    <%- include('../../../shared/userAvatar', {
                        item: comment,
                        avatarClass: 'rounded-circle me-2',
                        width: 32,
                        height: 32,
                        usernameClass: 'fw-bold',
                        variant: 'comment'
                    }) %>
                </a>

                <span class="text-muted">Â·</span>

                <span title="<%= formatLongDate(comment.created_at) %>" class="fs-6">
                    <%= formatRelativeDate(comment.created_at) %>
                </span>
            </div>

            <p class="text-dark py-1 px-3 px-md-4 px-lg-5"><%= comment.description %></p>

            <div class="d-flex flex-wrap gap-3">
                <%- include('./articleCommentButton', {
                    iconClass: 'fas fa-thumbs-up',
                    value: comment.likeCount,
                    buttonTitle: 'Dar me gusta'
                }) %>

                <%- include('./articleCommentButton', {
                    iconClass: 'fas fa-thumbs-down',
                    value: comment.dislikeCount,
                    buttonTitle: 'Dar no me gusta'
                }) %>

                <%- include('./articleCommentButton', {
                    iconClass: 'fas fa-reply',
                    value: comment.replyCount,
                    buttonTitle: 'Responder'
                }) %>
            </div>
        </li>
    <% }); %>
</ul>

<%- include('../../../../shared/pagination') %>