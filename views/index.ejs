<!DOCTYPE html>
<html lang="en">
    <head>
        <title></title>

        <meta charset="utf-8">
        <meta content="width=device-width, initial-scale=1.0" name="viewport">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
        <link href="/img/logo.png" rel="icon">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
        <link href="/css/style.css" rel="stylesheet">
    </head>

    <body>
        <%- include('partials/header') %>

        <div class="container-fluid my-4">
            <div class="row">
                <div class="col-12 col-md-8 col-lg-9">
                    <main>
                        <%- include('partials/section', {
                            sectionTitle: false,
                            swiperClass: 'main-news',
                            notices: notices,
                            withOverlay: true,
                            encryptionKey
                        }) %>

                        <%- include('partials/section', {
                            sectionTitle: 'Últimas Noticias',
                            swiperClass: 'latest-news',
                            notices: notices,
                            withOverlay: true,
                            encryptionKey
                        }) %>

                        <%- include('partials/section', {
                            sectionTitle: 'Noticias de Juegos',
                            swiperClass: 'gaming-news',
                            notices: notices,
                            withOverlay: false,
                            encryptionKey
                        }) %>

                        <%- include('partials/section', {
                            sectionTitle: 'Noticias de eSports',
                            swiperClass: 'e-sports-news',
                            notices: notices,
                            withOverlay: false,
                            encryptionKey
                        }) %>

                        <%- include('partials/section', {
                            sectionTitle: 'Noticias de Tecnología',
                            swiperClass: 'tech-news',
                            notices: notices,
                            withOverlay: false,
                            encryptionKey
                        }) %>
                    </main>
                </div>

                <div class="col-12 col-md-4 col-lg-3">
                    <%- include('partials/sidebar', {
                        sectionTitle: 'Noticias Populares',
                        swiperClass: 'popular-news',
                        notices: notices,
                        withOverlay: true,
                        encryptionKey
                    }) %>
                </div>
            </div>
        </div>

        <%- include('partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
        
        <script src="js/index.js"></script>
    </body>
</html>