<% const form = {
    id: 'settingsForm',
    displayNameInput: { 
        id: 'textDisplayNameProfileInput', 
        label: {
            content: 'Nombre de usuario',
        },
        type: 'text', 
        name: 'displayName' 
    },
    profilePictureInput: { 
        id: 'fileProfilePictureProfileInput', 
        label: {
            content: 'Foto de perfil',
        },
        name: 'profilePicture' 
    },
    coverPictureInput: {
        id: 'fileCoverPictureProfileInput', 
        label: {
            content: 'Foto de portada',
        },
        name: 'coverPicture' 
    },
    nameInput: {
        id: 'nameProfileInput',
        label: {
            content: 'Nombre',
        },
        type: 'text',
        name: 'name'
    },
    lastNameInput: {
        id: 'lastNameProfileInput',
        label: {
            content: 'Apellido',
        },
        type: 'text',
        name: 'lastName'
    },
    passwordInput: {
        id: 'passwordProfileInput',
        label: {
            content: 'Contraseña',
        },
        type: 'password',
        name: 'password'
    },
    repeatPasswordInput: {
        id: 'repeatPasswordProfileInput',
        label: {
            content: 'Repetir Contraseña',
        },
        type: 'password',
        name: 'repeatedPassword'
    },
    switches: [
        {
            id: 'commentNotificationsSwitch',
            content: 'Notificame por correo electrónico cuando sea mencionado o respondan a mis comentarios.'
        },
        {
            id: 'followingNotificationsSwitch',
            content: 'Notificame por correo electrónico cuando haya actualizaciones sobre mis temas favoritos.'
        },
        {
            id: 'newsletterNotificationsSwitch',
            content: 'Notificame por correo electrónico cuando haya noticias importantes o boletines cada semana.'
        }
    ],
    submitButton: {
        id: 'settingsSubmitButton', 
        content: 'Guardar cambios'
    },
    changePasswordButton: {
        id: 'changePasswordButton', 
        class: 'btn btn-secondary', 
        attrs: {
            'data-mdb-ripple-init': '',
            'data-mdb-collapse-init': '',
            'data-mdb-target': '.multi-collapse',
            'aria-controls': 'collapsePassword collapsePasswordBtn',
            'aria-expanded': 'false',
        },
        content: 'Cambiar Contraseña'
    },
    cancelChangePasswordButton: {
        id: 'cancelChangePasswordButton', 
        class: 'btn btn-secondary', 
        attrs: {
            'data-mdb-ripple-init': '',
            'data-mdb-collapse-init': '',
            'data-mdb-target': '.multi-collapse',
            'aria-controls': 'collapsePassword collapsePasswordBtn',
            'aria-expanded': 'false',
        },
        content: 'Cancelar'
    }
}; %>

<form id="settingsForm" class="row g-3">
    <div class="row mb-3">
        <%- include('../secondaryTitle', { title: 'información pública' }) %>

        <div class="col-md-4 mb-3">
            <p>Administra el nombre de usuario y perfil que se mostrará públicamente.</p>

            <%- include('../../../shared/outlineInput', { input: form.displayNameInput }) %>
        </div>
    
        <div class="col-md-4 mb-3">
            <p>Selecciona una imágen de perfil</p>

            <%- include('../../../shared/fileInput', { input: form.profilePictureInput }) %>
        </div>

        <div class="col-md-4 mb-3">
            <p>Selecciona una imágen de portada</p>

            <%- include('../../../shared/fileInput', { input: form.coverPictureInput }) %>
        </div>
    </div>

    <div class="row mb-3">
        <%- include('../secondaryTitle', { title: 'información personal' }) %>

        <p>Administra tu información personal. Consulta nuestros <a href="#">Términos de Servicio</a> y <a href="#">Política de Privacidad</a>.</p>

        <div class="row">
            <div class="col-md-6 mb-3">
                <%- include('../../../shared/outlineInput', { input: form.nameInput }) %>
            </div>

            <div class="col-md-6 mb-3">
                <%- include('../../../shared/outlineInput', { input: form.lastNameInput }) %>
            </div>
        </div>

        <div class="d-flex justify-content-center flex-column align-items-center mb-3">
            <div id="collapsePasswordBtn" class="collapse show multi-collapse">
                <%- include('../../../shared/button', { button: form.changePasswordButton }) %>
            </div>

            <div id="collapsePassword" class="collapse multi-collapse border p-4 rounded-3">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <%- include('../../../shared/outlineInput', { 
                            input: form.passwordInput 
                        }) %>
                    </div>

                    <div class="col-md-6 mb-3">
                        <%- include('../../../shared/outlineInput', { 
                            input: form.repeatPasswordInput 
                        }) %>
                    </div>
                </div>

                <div class="d-flex justify-content-center">
                    <%- include('../../../shared/button', { 
                        button: form.cancelChangePasswordButton 
                    }) %>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <%- include('../secondaryTitle', { title: 'Notificaciones' }) %>

        <p>Administra tus preferencias de notificación.</p>

        <div class="d-flex justify-content-center flex-column align-items-start">
            <%- include('../../../shared/switchList', { switches: form.switches }) %>
        </div>
    </div>

    <div class="d-flex justify-content-center bg-sticky rounded-3">
        <%- include('../../../shared/submit', { button: form.submitButton }) %>
    </div>
</form>