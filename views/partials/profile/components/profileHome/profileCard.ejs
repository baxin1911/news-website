<div class="card mb-4">
    <div class="position-relative">
        <img src="<%= profile.coverPath %>" alt="Portada" class="card-img-top" height="200">
        <div class="card-img-overlay overlay">
            <img src="<%= profile.avatarPath %>" alt="Foto de Perfil" 
                class="rounded-circle mb-3 avatar"
            >
            <p class="fs-4 text-white"><span class="fs-1 fw-bold"><%= profile.username %></span> <%= profile.code %></p>
        </div>
    </div>

    <div class="card-body">
        <p class="profile-content">
            <span class="d-flex flex-wrap justify-content-start gap-3">
                <span>Siguiendo:</span>

                <span class="fw-semibold"><%= profile.totalAuthors %> Autores</span>

                <span class="fw-semibold"><%= profile.totalTopics %> Tags</span>
            </span>

            <span class="fs-2 fw-bold posts-count-content text-end">
                <%= profile.totalPosts %> Posts
            </span>
        </p>
    </div>
</div>