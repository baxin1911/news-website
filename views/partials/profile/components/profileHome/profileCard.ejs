<div class="card mb-4">
    <div class="position-relative">
        <img src="<%= profile.coverPath ?? 'upload/cover.jpg' %>" alt="Portada" class="card-img-top" height="200">

        <div class="card-img-overlay overlay">
            <%- include('../../../shared/userAvatar', {
                avatarClass: 'rounded-circle mb-3 avatar',
                width: null,
                height: null,
                comment: null,
                variant: 'profile'
            }) %>
        </div>
    </div>

    <div class="card-body">
        <p class="profile-content d-flex flex-wrap justify-content-between align-items-center">
            <span class="d-flex flex-wrap justify-content-start gap-3">
                <span>Siguiendo:</span>

                <span class="fw-semibold"><%= profile.totalAuthors %> Autores</span>

                <span class="fw-semibold"><%= profile.totalTopics %> Tags</span>
            </span>

            <span class="fs-2 fw-bold posts-count-content text-end">
                <%= profile.totalPosts %> Posts
            </span>
        </p>
    </div>
</div>