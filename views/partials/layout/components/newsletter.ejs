<% const form = {
    attrs: {
        'id': (isFooter) ? 'newsletterFooterForm' : 'newsletterSidebarForm'
    },
    input: {
        id: (isFooter) ? 'emailNewsletterFooterInput' : 'emailNewsletterSidebarInput',
        type: 'email',
        name: 'email',
        attrs: {
            'placeholder': 'Ingresa tu correo electrónico.'
        },
        label: {
            content: 'Correo electrónico:'
        }
    },
    submitButton: {
        id: (isFooter) ? 'newsletterFooterBtn' : 'newsletterSidebarBtn',
        content: 'Suscribirse'
    }
}; %>

<section>
    <h2 class="title-style">Suscríbete a nuestro boletín</h2>

    <%- !isFooter ? `
        <div class="card">
            <div class="card-body">
    ` : '' %>

                <p class="card-text text-center">No te pierdas ninguna noticia: suscríbete a nuestro boletín.</p>

                <%- include('./groupInputForm', { form }) %>

    <%- !isFooter ? `
            </div>
        </div>
    ` : '' %>
</section>