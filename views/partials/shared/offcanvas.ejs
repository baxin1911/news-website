<div id="menuOffcanvas" tabindex="-1" class="offcanvas offcanvas-start" 
    aria-labelledby="<%= offcanvasHeader.idTitle %>"
>
    <%- include('../shared/header', {
        idTitle: offcanvasHeader.idTitle,
        title: offcanvasHeader.title,
        titleClass: offcanvasHeader.titleClass,
        headerClass: offcanvasHeader.headerClass,
        dismissTarget: offcanvasHeader.dismissTarget
    }); %>

    <div class="offcanvas-body d-flex flex-column dark">
        <div class="mb-3">
            <%- include('../shared/form', {
                form,
                formViewMode: form.viewMode
            }); %>
        </div>

        <div>
            <%- include('../shared/linkList', { 
                links,
                isHeader: true
            }); %>
        </div>

        <% if (!user) { %>
            <%- include('../shared/button', {
                btnClass: 'btn btn-outline-primary',
                withToggle: true,
                toggle: 'modal',
                withTarget: true,
                target: '#loginModal',
                withDismiss: false,
                withAria: false,
                content: '<i class="fa fa-user me-2"></i>Iniciar sesiÃ³n'
            }); %>
        <% } else { %>
            <%- include('./profileMenu', {
                user,
                profileMenuViewMode: 'offcanvas'
            }); %>
        <% } %>
    </div>
</div>