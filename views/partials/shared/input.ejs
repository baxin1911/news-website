<input id="<%= input.id %>" type="<%= input.type %>" name="<%= input.name %>" 
    class="form-control" value="<%= input.value %>"
    aria-describedby="<%= `${ input.id }Error` %>"
    <% for (let key in input.attrs) { %> 
        <%= key %>="<%= input.attrs[key] %>" 
    <% } %>
>

<%- include('./labelInput', { 
    id: input.id, 
    label: input.label 
}) %>

<%- include('./validationMessage', { 
    name: input.name, 
    errorClass: input.errorClass || 'invalid-feedback' 
}) %>